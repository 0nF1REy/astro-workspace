---
const { currentPage, totalPages, disablePrevious, disableNext } = Astro.props;

interface Props {
  currentPage: number;
  totalPages: number;
  disablePrevious: boolean;
  disableNext: boolean;
}
---

<div class="flex justify-between items-center mt-10">
  <a
    href={"/articles?page=" + (currentPage - 1)}
    class={disablePrevious
      ? "inline-block bg-gray-100 px-3 py-2 text-gray-400 rounded-lg pointer-events-none"
      : "inline-block bg-indigo-100 px-3 py-2 hover:bg-[#39b4ff] hover:text-white rounded-lg"}
  >
    Anterior
  </a>
  <span class="mx-4 text-sm text-gray-700">
    Página {currentPage} de {totalPages}
  </span>
  <a
    href={"/articles?page=" + (currentPage + 1)}
    class={disableNext
      ? "inline-block bg-gray-100 px-3 py-2 text-gray-400 rounded-lg pointer-events-none"
      : "inline-block bg-indigo-100 px-3 py-2 hover:bg-[#39b4ff] hover:text-white rounded-lg"}
  >
    Próximo
  </a>
</div>
