---
import Button from "../components/Button.astro";
---

<section class="hero" id="home">
  <div class="container">
    <div class="hero__content">
      <p class="hero__intro">Olá, eu sou</p>
      <h1 class="hero__name">Alan Ryan <span>da Silva Domingues</span></h1>
      <h2 class="hero__subtitle">Técnico em Desenvolvimento de Sistemas</h2>
      <div class="hero__actions">
        <Button text="Ver projetos" href="#work" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: url("../assets/hero-bg.png");
    background-position: left;
    background-repeat: no-repeat;
    background-size: cover;
    perspective: 1000px;
  }

  .hero__content {
    margin-inline: auto;
    max-width: 800px;
  }

  .hero__intro,
  .hero__name,
  .hero__subtitle,
  .hero__actions {
    opacity: 0;
    visibility: hidden;
    will-change: transform, opacity, filter;
  }

  .hero__intro {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 0.5rem;
    color: var(--primary-clr-400);
  }

  .hero__name {
    font-size: 2.5rem;
    line-height: 1.1;
    margin-bottom: 0.5rem;
    font-weight: 800;
  }

  .hero__name span {
    display: inline-block;
    color: var(--primary-clr-400);
  }

  .hero__subtitle {
    font-size: 1.25rem;
    font-weight: 400;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  @media (width >= 768px) {
    .hero__intro {
      font-size: 1.25rem;
    }
    .hero__name {
      font-size: 4rem;
    }
    .hero__subtitle {
      font-size: 1.75rem;
    }
  }
</style>

<script>
  import { gsap } from "gsap";

  function initHeroAnimation() {
    gsap.set(".hero__intro", {
      autoAlpha: 0,
      y: -20,
      filter: "blur(10px)",
    });

    gsap.set(".hero__name", {
      autoAlpha: 0,
      scale: 0.9,
      rotationX: -45,
    });

    gsap.set(".hero__subtitle", {
      autoAlpha: 0,
      x: -30,
      filter: "blur(8px)",
    });

    gsap.set(".hero__actions", {
      autoAlpha: 0,
      scale: 0,
      rotation: 360,
      y: 100,
    });

    const tl = gsap.timeline({
      defaults: {
        ease: "power3.out",
      },
    });

    tl.to(".hero__intro", {
      autoAlpha: 1,
      y: 0,
      filter: "blur(0px)",
      duration: 0.8,
      delay: 0.2,
    })
      .to(
        ".hero__name",
        {
          autoAlpha: 1,
          scale: 1,
          rotationX: 0,
          duration: 1,
          ease: "back.out(1.2)",
        },
        "-=0.5"
      )
      .to(
        ".hero__name span",
        {
          scale: 1.05,
          duration: 0.3,
          yoyo: true,
          repeat: 1,
        },
        "-=0.2"
      )
      .to(
        ".hero__subtitle",
        {
          autoAlpha: 1,
          x: 0,
          filter: "blur(0px)",
          duration: 0.7,
        },
        "-=0.6"
      )
      .to(
        ".hero__actions",
        {
          autoAlpha: 1,
          scale: 1.5,
          rotation: 0,
          y: 0,
          duration: 0.5,
          ease: "back.out(4)",
        },
        "-=0.3"
      )
      .to(".hero__actions", {
        scale: 1,
        duration: 0.3,
        ease: "elastic.out(2, 0.4)",
      })
      .to(".hero__actions .btn", {
        scale: 1.15,
        boxShadow: "0 0 30px rgba(30, 113, 183, 0.8)",
        duration: 0.3,
        repeat: 2,
        yoyo: true,
        ease: "power2.inOut",
      })
      .to(".hero__actions .btn", {
        y: -8,
        scale: 1.08,
        rotation: 2,
        duration: 1.5,
        ease: "power2.inOut",
        yoyo: true,
        repeat: -1,
      });
  }

  document.addEventListener("astro:page-load", initHeroAnimation);
</script>
