---
import Button from "../components/Button.astro";
---

<section class="hero" id="home">
  <div class="container">
    <div class="hero__content">
      <p class="hero__intro">Olá, eu sou</p>
      <h1 class="hero__name">Alan Ryan <span>da Silva Domingues</span></h1>
      <h2 class="hero__subtitle">Técnico em Desenvolvimento de Sistemas</h2>
      <Button text="Ver projetos" href="#work" />
    </div>
  </div>
</section>

<style>
  .hero {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: url("../assets/hero-bg.png");
    background-position: left;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .hero__content {
    margin-inline: auto;
    max-width: 800px;
  }

  .hero__intro {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 0.5rem;
    color: var(--text-clr-alt, #666);
  }

  .hero__name {
    font-size: 2.5rem;
    line-height: 1.1;
    margin-bottom: 0.5rem;
    font-weight: 800;
  }

  .hero__name span {
    color: var(--primary-clr-400);
  }

  .hero__subtitle {
    font-size: 1.25rem;
    font-weight: 400;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  @media (width >= 768px) {
    .hero__intro {
      font-size: 1.25rem;
    }
    .hero__name {
      font-size: 4rem;
    }
    .hero__subtitle {
      font-size: 1.75rem;
    }
  }
</style>
