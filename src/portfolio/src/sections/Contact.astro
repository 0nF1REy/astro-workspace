---
const email = "alanryan619@gmail.com";

const socials = [
  {
    href: "https://www.linkedin.com/in/alan-ryan-b115ba228/",
    label: "LinkedIn",
    icon: "fa-linkedin",
  },
  {
    href: "https://gitlab.com/alanryan619",
    label: "GitLab",
    icon: "fa-gitlab",
  },
  { href: "https://github.com/0nF1REy", label: "GitHub", icon: "fa-github" },
];
---

<footer id="contact" class="pt-section">
  <div class="container">
    <div class="content">
      <div class="title">
        <h3>Entre em Contato Comigo</h3>
        <a class="mail" href={`mailto:${email}`} target="_blank">
          <i class="fa-solid fa-envelope"></i>
          <span>{email}</span>
        </a>
      </div>

      <div class="address-info">
        <img src="/logotipo.svg" alt="logotipo" class="logo-footer" />

        <div>
          <a class="phone" href="tel:+5515996209364">+55 15 99620-9364</a>

          <ul class="social-links" role="list">
            {
              socials.map((s) => (
                <li>
                  <a
                    href={s.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={s.label}
                  >
                    <i class={`fa-brands ${s.icon}`} aria-hidden="true" />
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>

    <p class="copyright">
      &copy; {new Date().getFullYear()} Alan Ryan da Silva Domingues. Todos os direitos
      reservados.
    </p>
  </div>
</footer>

<style>
  footer {
    background-color: var(--secondary-clr-900);
  }

  .title {
    margin-bottom: 2.5rem;
    text-align: center;
  }

  h3 {
    font-size: 1.25rem;
    margin: 0 0 0.5rem;
  }

  .mail {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.05rem;
    font-weight: 600;
    color: var(--primary-clr-400);
    text-decoration: none;
  }

  .mail span {
    text-decoration: underline;
  }

  .logo-footer {
    height: 100px;
    width: auto;
    display: block;
  }

  .address-info {
    border-top: 1px solid var(--secondary-clr-400);
    padding-top: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .address-info > div {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .phone {
    color: var(--secondary-clr-100);
    font-size: 1.05rem;
    text-decoration: none;
  }

  .phone:hover {
    color: var(--primary-clr-400);
  }

  .social-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1rem;
  }

  .social-links li {
    display: inline-flex;
  }

  .social-links a {
    font-size: 1.4rem;
    color: var(--secondary-clr-100);
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .social-links a:hover {
    color: var(--primary-clr-400);
    transform: translateY(-2px);
  }

  .copyright {
    padding: 1rem;
    text-align: center;
    color: var(--secondary-clr-300);
  }

  @media (width >= 768px) {
    .title {
      text-align: left;
      margin-bottom: 1.5rem;
    }

    .address-info {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }

    .address-info > div {
      align-items: flex-end;
    }
  }
</style>
