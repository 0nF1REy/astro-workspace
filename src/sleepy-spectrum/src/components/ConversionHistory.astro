---
const items: any[] = Astro.props.items ?? [];
import { icons } from "../lib/icons";
---

<div class="space-y-4">
	{items.length === 0 ? (
		<div class="text-sm text-muted-foreground">Nenhuma convers√£o encontrada.</div>
	) : (
		items.map((item) => (
			<article class="divide-y rounded-2xl border bg-white p-4 flex items-center justify-between">
				<div class="flex items-center gap-4">
					<div class="h-12 w-12 flex items-center justify-center rounded-lg bg-gray-50">
						<Fragment set:html={icons.pdf} />
					</div>
					<div>
						<div class="text-sm font-medium text-foreground">{item.name}</div>
						<div class="text-xs text-muted-foreground">{new Date(item.date).toLocaleString()}</div>
					</div>
				</div>

				<div class="flex items-center gap-3">
					<div class="text-sm text-neutral-600">{item.tokens} tokens</div>
					<a href={`/conversions/${item.id}`} class="rounded-lg border px-3 py-1 text-sm">Visualizar</a>
				</div>
			</article>
		))
	)}
</div>
