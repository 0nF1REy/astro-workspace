---
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">
        <Image src={logo} alt="Logotipo do Astro" width="140" height="35" />
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="/">In√≠cio</a></li>
        <li><a href="/about">Sobre</a></li>
        <li><a href="/blog">Blog</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    height: 70px;
    background: var(--color-primary);
  }

  .header .container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
  }

  .header img {
    height: 35px;
    width: auto;
    vertical-align: middle;
  }

  .header nav ul {
    display: flex;
  }

  .header nav ul li {
    padding: 0 10px;
  }

  .header nav ul li a {
    color: #fff;
  }
</style>
